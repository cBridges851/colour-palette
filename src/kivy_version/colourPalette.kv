#:kivy 2.0
# Applies to all text inputs
<TextInput>
    font_size: 26
    multiline: False
    size_hint: 0.5, 0.08

<Label>
    font_size: 30

# Whole Application
<Interface>
    FloatLayout:
        size: root.width, root.height
        Label:
            id: header_title
            text:"RGB To Hex"
            font_size: 40
            bold: True
            pos_hint: {"y": 0.4}

        Label:
            id: red_label
            text: "Red: "
            pos_hint: {"x": -0.3, "y": 0.25}

        TextInput:
            id: red_input
            pos_hint: {"x": 0.3, "y": 0.715}

        Label:
            id: green
            text: "Green: "
            pos_hint: {"x": -0.3, "y": 0.125}

        TextInput:
            id: green_input
            pos_hint: {"x": 0.3, "y": 0.59}

        Label:
            id: blue
            text: "Blue: "
            pos_hint: {"x": -0.3, "y": 0}

        TextInput:
            id: green_input
            pos_hint: {"x": 0.3, "y": 0.465}

        Button:
            text: "Convert!"
            pos_hint: {"x": 0.05, "y": 0.15}
            size_hint: 0.9, 0.2

